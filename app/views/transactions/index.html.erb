<div class="max-w-4xl mx-auto bg-white shadow rounded-xl p-6 space-y-6">
    <div class="container">
        <div class="p-5">
                <h1>Transaction History</h1>

                <table class="table">
                    <thead>
                        <tr>
                            <th>Type</th>
                            <th>Amount</th>
                            <th>Recipient</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% @transactions.each do |t| %>
                            <tr>
                                <td>
                                    <%= t.transaction_type %> 
                                    <% if t.transaction_type == "transfer" %>
                                        <%= current_user.id == t.user_id ? "To" : "From" %>
                                    <% end %>
                                </td>
                                <td><%= number_to_currency(t.amount) %></td>
                                <td><%= t.recipient&.username || "-" %></td>
                                <td><%= t.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                            </tr>
                        <% end %>
                    </tbody>
                </table>
            </div>
        </div>
</div>