<div class="w-50 mx-auto bg-white shadow rounded-xl p-6 space-y-6">
    <div class="container-sm">
        <div class="p-5">
            <h3>Login to Mini Bank</h3>

            <%= form_with url: login_path, method: :post, local: true do %>
              <div class="mb-3">
                <%= label_tag :username, nil, class: "form-label" %>
                <%= text_field_tag :username, nil, class: "form-control" %>
              </div>

              <div class="flex flex-col mb-4 md:w-full">
                <%= label_tag :password, nil, class: "form-label" %>
                <%= password_field_tag :password, nil, class: "form-control" %>
              </div>

              <div>
                <%= submit_tag "Login", class: "btn btn-primary" %>
              </div>
            <% end %>
        </div>
    </div>
</div>